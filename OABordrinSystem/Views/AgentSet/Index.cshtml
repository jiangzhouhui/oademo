
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@OABordrinCommon.Common.GetLanguageValueByParam("代理设置", "b_AgentSet", "Common", ViewBag.language)</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">@OABordrinCommon.Common.GetLanguageValueByParam("主页", "CommonName", "Common", ViewBag.language)</a>
            </li>
            <li>
                <a>@OABordrinCommon.Common.GetLanguageValueByParam("权限管理", "CommonName", "Common", ViewBag.language)</a>
            </li>
            <li class="active">
                <strong>@OABordrinCommon.Common.GetLanguageValueByParam("代理设置", "b_AgentSet", "Common", ViewBag.language)</strong>
            </li>
        </ol>
    </div>
</div>
<div class="animated fadeInRight" style="">
    <div class="row">
        <div class="ibox ">
            <div class="ibox-title">
                <form class="form-inline" id="SearchPara">
                    <div class="form-group">
                        <input type="text" placeholder="@OABordrinCommon.Common.GetLanguageValueByParam("查询字符","Noun","Common",ViewBag.language)" name="SearchValue" class="form-control">
                    </div>
                    <button class="btn btn-w-m btn-primary" type="button" id="BtnSearch">@OABordrinCommon.Common.GetLanguageValueByParam("查询", "CommonName", "Common", ViewBag.language)</button>
                    <button type="button" class="btn btn-w-m btn-warning" id="btnAdd">@OABordrinCommon.Common.GetLanguageValueByParam("新增", "CommonName", "Common", ViewBag.language)</button>
                </form>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <div style="width:98%">
                        <table id="AgentSetDataTable" class="table table-striped table-bordered table-hover dataTables-example MicroYaHei-solid" style="width:100%;min-width:1074px;" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @OABordrinCommon.Common.GetLanguageValueByParam("委托人", "b_AgentSet", "Common", ViewBag.language)
                                    </th>
                                    <th>
                                        @OABordrinCommon.Common.GetLanguageValueByParam("代理人", "b_AgentSet", "Common", ViewBag.language)
                                    </th>
                                    <th>
                                        @OABordrinCommon.Common.GetLanguageValueByParam("生效时间", "b_AgentSet", "Common", ViewBag.language)
                                    </th>
                                    <th>
                                        @OABordrinCommon.Common.GetLanguageValueByParam("终止时间", "b_AgentSet", "Common", ViewBag.language)
                                    </th>
                                    <th>
                                        @OABordrinCommon.Common.GetLanguageValueByParam("代理模块", "b_AgentSet", "Common", ViewBag.language)
                                    </th>
                                    <th>
                                        @OABordrinCommon.Common.GetLanguageValueByParam("代理原因", "b_AgentSet", "Common", ViewBag.language)
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/AgentSet/AgentSetEdit.cshtml")
@section scripts{
    <!-- jquery-ui -->
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.js"></script>

    <!-- bootstrap-datepicker CSS-->
    <link href="~/OpenResouce/css/plugins/datapicker/datepicker3.css" rel="stylesheet" />
    <!-- bootstrap-datepicker JS-->
    <script src="~/OpenResouce/js/plugins/datapicker/bootstrap-datepicker.js"></script>

    <!-- bootstrap-clockpicker CSS-->
    <link href="~/OpenResouce/css/plugins/clockpicker/clockpicker.css" rel="stylesheet" />
    <!-- bootstrap-clockpicker JS-->
    <script src="~/OpenResouce/js/plugins/clockpicker/clockpicker.js"></script>

    <!-- DataTables CSS -->
    <link href="~/OpenResouce/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/OpenResouce/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet" />
    <link href="~/OpenResouce/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet" />

    <!-- DataTables JS -->
    <script src="~/OpenResouce/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/OpenResouce/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/OpenResouce/js/plugins/dataTables/dataTables.responsive.js"></script>
    <script src="~/OpenResouce/js/plugins/dataTables/dataTables.tableTools.min.js"></script>

    <!-- ICheck CSS -->
    <link href="~/OpenResouce/css/plugins/iCheck/custom.css" rel="stylesheet" />
    <link href="~/OpenResouce/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <!-- ICheck JS -->
    <script src="~/OpenResouce/js/plugins/iCheck/icheck.min.js"></script>

    <!-- 新增窗口 JS -->
    <script src="@Url.Version("~/Scripts/AgentSet/AgentSetEdit.js")"></script>
    <script type="text/javascript">
        var $AgentSetDataTable = $("#AgentSetDataTable");
        var AgentSetDataTableObj;

        $(document).ready(function () {
            AgentSetDataTableObj = $AgentSetDataTable.dataTable({
                "bServerSide": true,
                "bProcessing": false,
                "bFilter": false,
                "bAutoWidth": true,
                "sAjaxSource": '/AgentSet/GetAgentSetList',
                "fnServerData": RetrieveAgentSetData,
                "aoColumns": [
                        { "data": "b_DelegateName", "sWidth": 250 },
                        { "data": "b_AgentName" },
                        { "data": "b_StartDate" },
                        { "data": "b_EndDate" },
                        { "data": "b_AgentContent" },
                        { "data": "b_AgentReason" }
                ],
                "oLanguage": {
                    "sLengthMenu": "_MENU_",
                    "sInfo": " @OABordrinCommon.Common.GetLanguageValueByParam("从", "CommonName", "Common", ViewBag.language) _START_ @OABordrinCommon.Common.GetLanguageValueByParam("到", "CommonName", "Common", ViewBag.language)  _END_ /@OABordrinCommon.Common.GetLanguageValueByParam("共", "CommonName", "Common", ViewBag.language) _TOTAL_ @OABordrinCommon.Common.GetLanguageValueByParam("条数据", "CommonName", "Common", ViewBag.language) "

                },
                "aLengthMenu": [15, 25, 50, 100]
            });





        });

        function GetAgentSetParam(aoData) {
            //DataTable固定传入参数
            var sEcho = aoData[0].value;
            var iDisplayStart = aoData[3].value;
            var iDisplayLength = aoData[4].value;
            //排序数组中的索引值
            var index = aoData[aoData.length - 3].value;
            //根据索引获取排序名称
            var iSortTitle = aoData[5 + index * 2].value;
            //获取排序的方式
            var sSortType = aoData[aoData.length - 2].value;

            var searchValue = $("input[name='SearchValue']").val();

            return { "sEcho": sEcho, "iDisplayStart": iDisplayStart, "iDisplayLength": iDisplayLength, "iSortTitle": iSortTitle, "sSortType": sSortType, "searchValue": searchValue };
        }

        function RetrieveAgentSetData(sSource, aoData, fnCallback) {
            $.ajax({
                url: '/AgentSet/GetAgentSetList',//这个就是请求地址对应sAjaxSource
                data: GetAgentSetParam(aoData),
                dataType: 'json',
                success: function (result) {
                    fnCallback(result);//把返回的数据传给这个方法就可以了,datatable会自动绑定数据的
                },
                error: function (msg) {
                }
            });
        }

        $("#btnAdd").click(function () {
            $(".clockpicker").show();
            app.util.ModelToEdit($AgentSetEdit);
            app.util.clearError($AgentSetEdit);
            AgentSetParam.b_StartDate.datepicker('setEndDate', '');
            AgentSetParam.b_EndDate.datepicker('setStartDate', '');
            app.util.bindValue(AgentSetParam, "");
            AgentSetParam.b_DelegateName.val('@ViewBag.UserName');
            AgentSetParam.b_IsValid.val("1");
            $AgentSetEdit.find(".modal-title").text("@OABordrinCommon.Common.GetLanguageValueByParam("新增", "CommonName", "Common", ViewBag.language)");
            $("#SaveAgentSet").show();
            $("#AgentModuleList").find("input").each(function () {
                $(this).iCheck('uncheck');
            });
            $AgentSetEdit.modal("show");
        });

        $AgentSetDataTable.delegate(".edit", "click", function () {
            $("#AgentModuleList").find("input").each(function () {
                $(this).iCheck('uncheck');
            });
            $.ajax({
                url: '/AgentSet/GetAgentSetById',
                data: { "id": $(this).attr("id"), "type": "edit" },
                dataType: "json",
                success: function (ans) {
                    if (ans.error.length > 0) {
                        dialog.showMsg("@OABordrinCommon.Common.GetLanguageValueByParam("错误提示", "CommonName", "Common", ViewBag.language)！", ans.error[0].value);
                        return;
                    }
                    $("#SaveAgentSet").show();
                    $(".clockpicker").show();
                    app.util.ModelToEdit($AgentSetEdit);
                    app.util.clearError($AgentSetEdit);
                    app.util.bindValue(AgentSetParam, ans);
                    if (ans.data != null && ans.data.AgentModuleList.length > 0) {
                        for (var i = 0; i < ans.data.AgentModuleList.length; i++) {
                            $("input[value='" + ans.data.AgentModuleList[i] + "']").iCheck('check');
                        }
                    }
                    $AgentSetEdit.find(".modal-title").text("@OABordrinCommon.Common.GetLanguageValueByParam("修改", "CommonName", "Common", ViewBag.language)");
                    $AgentSetEdit.modal("show");
                }
            });
        }).delegate(".detail", "click", function () {
            $("#AgentModuleList").find("input").each(function () {
                $(this).iCheck('uncheck');
            });
            $.ajax({
                url: '/AgentSet/GetAgentSetById',
                data: { "id": $(this).attr("id"), "type": "detail" },
                dataType: "json",
                success: function (ans) {
                    if (ans.error.length > 0) {
                        dialog.showMsg("@OABordrinCommon.Common.GetLanguageValueByParam("错误提示", "CommonName", "Common", ViewBag.language)！", ans.error[0].value);
                        return;
                    }
                    $("#SaveAgentSet").hide();
                    $(".clockpicker").hide();
                    app.util.clearError($AgentSetEdit);
                    app.util.bindValue(AgentSetParam, ans);
                    if (ans.data != null && ans.data.AgentModuleList.length > 0) {
                        for (var i = 0; i < ans.data.AgentModuleList.length; i++) {
                            $("input[value='" + ans.data.AgentModuleList[i] + "']").iCheck('check');
                        }
                    }
                    app.util.ModelToDetails($AgentSetEdit);
                    $AgentSetEdit.find(".modal-title").text("@OABordrinCommon.Common.GetLanguageValueByParam("详情", "CommonName", "Common", ViewBag.language)");
                    $AgentSetEdit.modal("show");
                }
            });
        }).delegate(".delete", "click", function () {
            if (confirm("@OABordrinCommon.Common.GetLanguageValueByParam("您确定要删除吗？", "CommonName", "Common", ViewBag.language)")) {
                $.ajax({
                    url: '/AgentSet/DeleteAgentSetById',
                    data: { "id": $(this).attr("id") },
                    dataType: "json",
                    success: function (ans) {
                        if (ans.error.length > 0) {
                            dialog.showMsg("@OABordrinCommon.Common.GetLanguageValueByParam("错误提示", "CommonName", "Common", ViewBag.language)！", ans.error[0].value);
                            return;
                        }
                        AgentSetDataTableObj.fnPageChange(app.util.DTCurrentPage(AgentSetDataTableObj));
                    }
                });
            }
        });

        //查询
        $("#BtnSearch").click(function () {
            AgentSetDataTableObj.fnDraw();
        });
    </script>
}

