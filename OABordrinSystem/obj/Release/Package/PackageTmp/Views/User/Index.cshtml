
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@OABordrinCommon.Common.GetLanguageValueByParam("人员信息", "CommonName", "Common", ViewBag.language)</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">@OABordrinCommon.Common.GetLanguageValueByParam("主页", "CommonName", "Common", ViewBag.language)</a>
            </li>
            <li>
                <a>@OABordrinCommon.Common.GetLanguageValueByParam("组织管理", "CommonName", "Common", ViewBag.language)</a>
            </li>
            <li class="active">
                <strong>@OABordrinCommon.Common.GetLanguageValueByParam("人员信息", "CommonName", "Common", ViewBag.language)</strong>
            </li>
        </ol>
    </div>
</div>
<div class="animated fadeInRight" style="">
    <div class="row">
        <div class="ibox ">
            <div class="ibox-title">
                <form class="form-inline" id="SearchPara">
                    <div class="form-group">
                        <input type="text" placeholder="@OABordrinCommon.Common.GetLanguageValueByParam("查询字符","Noun","Common",ViewBag.language)" name="SearchValue" class="form-control">
                    </div>
                    <button class="btn btn-w-m btn-primary" type="button" id="BtnSearch">@OABordrinCommon.Common.GetLanguageValueByParam("查询", "CommonName", "Common", ViewBag.language)</button>
                    @*<button type="button" class="btn btn-w-m btn-warning" id="btnAdd">@OABordrinCommon.Common.GetLanguageValueByParam("新建", "CommonName", "Common", ViewBag.language)</button>*@
                    <button type="button" class="btn btn-w-m btn-warning" id="btnImport">@OABordrinCommon.Common.GetLanguageValueByParam("导入", "CommonName", "Common", ViewBag.language)</button>
                </form>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <div style="width:98%">
                        <table id="UserDataTable" class="table table-striped table-bordered table-hover dataTables-example MicroYaHei-solid" style="width:100%;min-width:1074px;" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@OABordrinCommon.Common.GetLanguageValueByParam("姓名", "ORG", "Common", ViewBag.language)</th>
                                    <th>@OABordrinCommon.Common.GetLanguageValueByParam("工号", "ORG", "Common", ViewBag.language)</th>
                                    @*<th>@OABordrinCommon.Common.GetLanguageValueByParam("邮箱", "ORG", "Common", ViewBag.language)</th>*@
                                    <th>@OABordrinCommon.Common.GetLanguageValueByParam("中心", "ORG", "Common", ViewBag.language)</th>
                                    <th>@OABordrinCommon.Common.GetLanguageValueByParam("部门", "ORG", "Common", ViewBag.language)</th>
                                    @*<th>@OABordrinCommon.Common.GetLanguageValueByParam("身份证号", "ORG", "Common", ViewBag.language)</th>*@
                                    <th>@OABordrinCommon.Common.GetLanguageValueByParam("高级经理", "b_ExpenseReimbursement", "ERItemType", ViewBag.language)</th>
                                    <th>@OABordrinCommon.Common.GetLanguageValueByParam("总监", "b_ExpenseReimbursement", "ERItemType", ViewBag.language)</th>
                                    <th>VP</th>
                                    <th>所属公司</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/User/UserEdit.cshtml")
<div style="display:none;"></div>
@Html.Partial("~/Views/User/UserImport.cshtml")
@section scripts{
    <!-- jquery-ui -->
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.js"></script>

    <!-- DataTables CSS -->
    <link href="~/OpenResouce/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/OpenResouce/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet" />
    <link href="~/OpenResouce/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet" />

    <!-- DataTables JS -->
    <script src="~/OpenResouce/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/OpenResouce/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/OpenResouce/js/plugins/dataTables/dataTables.responsive.js"></script>
    <script src="~/OpenResouce/js/plugins/dataTables/dataTables.tableTools.min.js"></script>


    <!-- ICheck CSS -->
    <link href="~/OpenResouce/css/plugins/iCheck/custom.css" rel="stylesheet" />
    <link href="~/OpenResouce/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <!-- ICheck JS -->
    <script src="~/OpenResouce/js/plugins/iCheck/icheck.min.js"></script>


    <script src="@Url.Version("~/Scripts/User/UserEdit.js")"></script>


    <script type="text/javascript">
        var $UserDataTable = $("#UserDataTable"), UserDataTableObj;
        UserSearchParam = app.util.getEditParam($("#SearchPara"));
        var $UserImport = $("#UserImport");

        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            //加载表格数据
            UserDataTableObj = $UserDataTable.dataTable({
                "bServerSide": true,
                "bProcessing": false,
                "bFilter": false,
                "sAjaxSource": '/User/GetUserList',
                "fnServerData": RetrieveUserData,
                "aoColumns": [
                        { "data": "first_Name", "sWidth": 180 },
                        { "data": "b_JobNumber" },
                        //{ "data": "Email" },
                        { "data": "b_Centre" },
                        { "data": "b_Department" },
                        { "data": "b_SeniorManager" },
                        { "data": "b_Director" },
                        { "data": "b_VP" },
                        { "data": "b_AffiliatedCompany" }
                ],
                "oLanguage": {
                    "sLengthMenu": "_MENU_",
                    "sInfo": " @OABordrinCommon.Common.GetLanguageValueByParam("从", "CommonName", "Common", ViewBag.language) _START_ @OABordrinCommon.Common.GetLanguageValueByParam("到", "CommonName", "Common", ViewBag.language)  _END_ /@OABordrinCommon.Common.GetLanguageValueByParam("共", "CommonName", "Common", ViewBag.language) _TOTAL_ @OABordrinCommon.Common.GetLanguageValueByParam("条数据", "CommonName", "Common", ViewBag.language)",
                    "oPaginate": {//分页的样式内容。
                        "sPrevious": "@OABordrinCommon.Common.GetLanguageValueByParam("上一页", "CommonName", "Common", ViewBag.language)",
                        "sNext": "@OABordrinCommon.Common.GetLanguageValueByParam("下一页", "CommonName", "Common", ViewBag.language)",
                        "sFirst": "@OABordrinCommon.Common.GetLanguageValueByParam("第一页", "CommonName", "Common", ViewBag.language)",
                        "sLast": "@OABordrinCommon.Common.GetLanguageValueByParam("最后", "CommonName", "Common", ViewBag.language)"
                    }
                },
                "aLengthMenu": [15, 25, 50, 100],
            });
        });

        function RetrieveUserData(sSource, aoData, fnCallback) {
            $.ajax({
                url: '/User/GetUserList',//这个就是请求地址对应sAjaxSource
                data: GetUserSearchParam(aoData),
                dataType: 'json',
                success: function (result) {
                    fnCallback(result);//把返回的数据传给这个方法就可以了,datatable会自动绑定数据的
                },
                error: function (msg) {
                }
            });
        }

        function GetUserSearchParam(aoData) {
            //DataTable固定传入参数
            var sEcho = aoData[0].value;
            var iDisplayStart = aoData[3].value;
            var iDisplayLength = aoData[4].value;
            //排序数组中的索引值
            var index = aoData[aoData.length - 3].value;
            //根据索引获取排序名称
            var iSortTitle = aoData[5 + index * 2].value;
            //获取排序的方式
            var sSortType = aoData[aoData.length - 2].value;
            var searchValue = $.trim($("input[name='SearchValue']").val());

            return { "sEcho": sEcho, "iDisplayStart": iDisplayStart, "iDisplayLength": iDisplayLength, "iSortTitle": iSortTitle, "sSortType": sSortType, "searchValue": searchValue };
        }

        //查询
        $("#BtnSearch").click(function () {
            UserDataTableObj.fnDraw();
        });

        //新增
        $("#btnAdd").click(function () {
            app.util.ModelToEdit($UserEdit);
            app.util.clearError($UserEdit);
            app.util.bindValue(UserParam, "");
            $UserEdit.find(".modal-title").text("@OABordrinCommon.Common.GetLanguageValueByParam("新增", "CommonName", "Common", ViewBag.language)");
            $("#SaveUser").show();
            $("#b_AffiliatedCompany").find("input").each(function () {
                $(this).iCheck('uncheck');
            });
            $UserEdit.modal("show");
        });

        //获取保存数据
        function getParamMethod()
        {
            var b_AffiliatedCompany = "";
            var para = app.util.serializeParamArray(UserParam)
            $("div.icheckbox_square-green").each(function () {
                if ($(this).hasClass("checked")) {
                    b_AffiliatedCompany = b_AffiliatedCompany + $(this).find("input").first().val() + ";";
                }
            });
            para.b_AffiliatedCompany = b_AffiliatedCompany;
            return para;
        }




        //保存用户
        $("#SaveUser").click(function () {
            if (app.util.ValidationFromData($UserEdit)) {
                $.ajax({
                    url: '/User/SaveUser',
                    data: getParamMethod(),
                    dataType: "json",
                    success: function (ans) {
                        if (ans.error.length > 0) {
                            app.util.onError(ans.error, $UserEdit);
                            return;
                        }
                        $UserEdit.modal("hide");
                        UserDataTableObj.fnPageChange(app.util.DTCurrentPage(UserDataTableObj));
                    }
                });
            }
        });

        $UserDataTable.delegate(".edit", "click", function () {
            app.util.bindValue(UserParam, "");
            $("#b_AffiliatedCompany").find("input").each(function () {
                $(this).iCheck('uncheck');
            });
            $.ajax({
                url: '/User/GetUserById',
                data: { "id": $(this).attr("id") },
                dataType: "json",
                success: function (ans) {
                    if (ans.error.length > 0) {
                        dialog.showMsg("@OABordrinCommon.Common.GetLanguageValueByParam("错误提示", "CommonName", "Common", ViewBag.language)！", ans.error[0].value);
                        return;
                    }
                    if (ans.data != null && ans.data.b_AffiliatedCompany != "" && ans.data.b_AffiliatedCompany != null)
                    {
                        var arrList = ans.data.b_AffiliatedCompany.split(";");
                        if (arrList != null && arrList.length > 0) {
                            for (var i = 0; i < arrList.length; i++) {
                                $("input[value='" + arrList[i] + "']").iCheck('check');
                            }
                        }
                    }
                    $("#SaveUser").show();
                    app.util.ModelToEdit($UserEdit);
                    app.util.clearError($UserEdit);
                    app.util.bindValue(UserParam, ans);
                    $UserEdit.find(".modal-title").text("@OABordrinCommon.Common.GetLanguageValueByParam("修改", "CommonName", "Common", ViewBag.language)");
                    $UserEdit.modal("show");
                }
            });
        }).delegate(".detail", "click", function () {
            app.util.bindValue(UserParam, "");
            $("#b_AffiliatedCompany").find("input").each(function () {
                $(this).iCheck('uncheck');
            });
            $.ajax({
                url: '/User/GetUserById',
                data: { "id": $(this).attr("id") },
                dataType: "json",
                success: function (ans) {
                    if (ans.error.length > 0) {
                        dialog.showMsg("@OABordrinCommon.Common.GetLanguageValueByParam("错误提示", "CommonName", "Common", ViewBag.language)！", ans.error[0].value);
                        return;
                    }
                    if (ans.data != null && ans.data.b_AffiliatedCompany != "" && ans.data.b_AffiliatedCompany!=null) {
                        var arrList = ans.data.b_AffiliatedCompany.split(";");
                        if (arrList != null && arrList.length > 0) {
                            for (var i = 0; i < arrList.length; i++) {
                                $("input[value='" + arrList[i] + "']").iCheck('check');
                            }
                        }
                    }
                    $("#SaveUser").hide();
                    app.util.clearError($UserEdit);
                    app.util.bindValue(UserParam, ans);
                    app.util.ModelToDetails($UserEdit);
                    $UserEdit.find(".modal-title").text("@OABordrinCommon.Common.GetLanguageValueByParam("详情", "CommonName", "Common", ViewBag.language)");
                    $UserEdit.modal("show");
                }
            });
        });

        $("#btnImport").click(function () {
            app.util.clearError($UserImport);
            //上传文件控件
            var fileobj = $("#Prfile").clone().val("");
            $("#Prfile").closest("label").empty().append(fileobj);
            $UserImport.modal("show");
        });



        $("#upload").click(function () {
            var $this = $(this);
            var formData = new FormData();
            formData.append("myfile", document.getElementById("Prfile").files[0]);
            $this.attr("disabled", "disabled");
            $.ajax({
                url: '/User/UploadUserFile',
                type: "POST",
                data: formData,
                contentType: false,
                processData: false,
                success: function (ans) {
                    if (ans.error.length > 0) {
                        $this.removeAttr("disabled", "disabled");
                        app.util.onError(ans.error, $UserImport);
                        return;
                    }
                    $this.removeAttr("disabled", "disabled");
                    $UserImport.modal("hide");
                    UserDataTableObj.fnDraw();
                }
            });
        });





    </script>

}

